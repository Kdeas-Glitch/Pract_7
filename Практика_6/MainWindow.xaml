<Window x:Class="Практика_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практика_6"
        mc:Ignorable="d"
        Title="Регистрация нового пользователя" Height="555" Width="516"
        >
    <Border CornerRadius="45" >
        <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="260"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False" Background="LightBlue" Height="40">
            <Button Content="Главная" DockPanel.Dock="left" Margin="5" Width="100" Height="30"/>
            <Button Content="Профиль" DockPanel.Dock="left" Margin="5" Width="100" Height="30"/>
            <Button Content="Настройки" DockPanel.Dock="left" Margin="5" Width="100" Height="30"/>
            <Button Content="Помощь" DockPanel.Dock="left" Margin="5" Width="100" Height="30"/>
        </DockPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="205"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="0.5" BorderBrush="Black" Padding="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <Button Grid.Row="1"  Height="20">Загрузить фото</Button>
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Column="1" Grid.ColumnSpan="2" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Margin="5">ФИО:</Label>
                    <TextBox Grid.Row="0" Grid.ColumnSpan="3" Grid.Column="1" Height="20"></TextBox>
                    <Label Grid.Row="1" Grid.Column="0" Margin="5">Email:</Label>
                    <TextBox Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="1" Height="20"></TextBox>
                    <Label Grid.Row="2" Grid.Column="0" Margin="5">Телефон:</Label>
                    <TextBox Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="1" Height="20"></TextBox>
                    <Label Grid.Row="3" Grid.Column="0" Margin="5">Дата Рождения:</Label>
                    <DatePicker Height="25" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"></DatePicker>
                    <Label Grid.Row="4" Grid.Column="0" Margin="5">Пол:</Label>
                    <Grid Grid.Row="4" Grid.ColumnSpan="3" Grid.Column="1" Height="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton Grid.ColumnSpan="2">Мужской</RadioButton>
                        <RadioButton Grid.Column="1" >Женский</RadioButton>
                    </Grid>
                    <Label Grid.Row="5" Grid.Column="0" Margin="5">Пароль:</Label>
                    <TextBox Grid.Row="5" Grid.ColumnSpan="3" Grid.Column="1" Height="20"></TextBox>
                    <Label Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">Подтверждение пароля:</Label>
                    <TextBox Grid.Row="6" Grid.ColumnSpan="2" Grid.Column="2" Height="20"></TextBox>
                </Grid>
            </Grid>
            
        </Grid>
        <WrapPanel Grid.Row="2" Background="#f0f0f0" Margin="15">
            <Label>*Пароль должен содержать минимум 8 символов.</Label>
            <Label>*Email должен быть в формате name@mail.com.</Label>
            <Label>*Все поля обязательны.</Label>
        </WrapPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Width="290" DockPanel.Dock="Right" HorizontalAlignment="Right">
            <Button Height="20" Margin="15 0" Width="150">Зарегестрироваться</Button>
            <Button Height="20" Width="90" >Отмена</Button>
        </StackPanel>
        <StackPanel Grid.Row="4" Background="Gray">
            <Label FontSize="10">Готово</Label>
        </StackPanel>
    </Grid>
    </Border>
</Window>
