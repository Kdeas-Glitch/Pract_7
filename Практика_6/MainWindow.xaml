<Window x:Class="Практика_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практика_6"
        mc:Ignorable="d"
        Title="Регистрация нового пользователя" Height="1000" Width="500"
        >
    <StackPanel Orientation="Vertical">
        <Border BorderThickness="2" BorderBrush="Black" Width="260" HorizontalAlignment="Left">
            <Grid Width="260" Height="260" VerticalAlignment="Top" HorizontalAlignment="Left" >
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="225"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Grid.ColumnSpan="2" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Margin="5">Имя:</Label>
                    <TextBox Grid.Row="0" Grid.ColumnSpan="3" Grid.Column="1" Height="20" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <Label Grid.Row="1" Grid.Column="0" Margin="5">Фамилия:</Label>
                            <TextBox Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="1" Height="20" Text="{Binding Last_Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <Label Grid.Row="2" Grid.Column="0" Margin="5">Отчество:</Label>
                            <TextBox Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="1" Height="20" Text="{Binding Middle_Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <Label Grid.Row="3" Grid.Column="0" Margin="5">Специальность:</Label>
                            <TextBox Height="25" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Specialisation, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <Label Grid.Row="4" Grid.Column="0" Margin="5">Пароль:</Label>
                            <TextBox Height="25" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                </Grid>
            </Grid>

        </Grid>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Width="260" DockPanel.Dock="Right" HorizontalAlignment="Right">
            <Button Height="20" Margin="5 0" Width="150" Click="MessageUser">Зарегестрироваться</Button>
            <Button Height="20" Width="90" Click="DeleteUser">Отмена</Button>
        </StackPanel>
    </Grid>
        </Border>
        <Border BorderThickness="2" BorderBrush="Black" Width="260" HorizontalAlignment="Left">
            <Grid Width="260" HorizontalAlignment="Left" Height="100">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Margin="5" >ID:</Label>
                <TextBox Grid.Row="0" Grid.ColumnSpan="3" Grid.Column="1" Height="20" Name="_ID"></TextBox>
                <Label Grid.Row="1" Grid.Column="0" Margin="5" >Пароль:</Label>
                <TextBox Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="1" Height="20" Name="_Password"></TextBox>
                <Button Click="Login" Grid.Row="2" Grid.ColumnSpan="2" Width="260" HorizontalAlignment="Left">Войти</Button>
            </Grid>
        </Border>
        <Border BorderThickness="2" BorderBrush="Black" Width="260" HorizontalAlignment="Left">
            <Grid Width="260" HorizontalAlignment="Left" Height="190">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Margin="5">ID:</Label>
                <Label Grid.Row="0" Grid.Column="1" Height="35" Name="ID"></Label>
                <Label Grid.Row="1" Grid.Column="0" Margin="5">ФИО:</Label>
                <Label Grid.Row="1" Grid.Column="1" Height="35" Name="FIO"></Label>
                <Label Grid.Row="2" Grid.Column="0" Margin="5">Специальность:</Label>
                <Label Grid.Row="2" Grid.Column="1" Height="35" Name="Spec"></Label>
                <Label Grid.Row="3" Grid.Column="0" Margin="5">Пароль:</Label>
                <Label Grid.Row="3" Grid.Column="1" Height="35" Name="Pass"></Label>
            </Grid>
        </Border>
    </StackPanel>



</Window>
